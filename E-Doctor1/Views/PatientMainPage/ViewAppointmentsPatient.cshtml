@model  E_Doctor1.Models.ListModel<ErgasiaMVC.Models.Appointment>
@using System.Globalization
@using ErgasiaMVC.Models
@{
    ViewBag.Title = "ViewAppointmentsPatient";
}

<div class="user-credentials">
    <input type="button" value="Αποσύνδεση" onclick="location.href='@Url.Action("Index","Home")'" />
</div>

<h2>Προβολή Ραντεβού</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Ιατρός</th>
            <th scope="col">Ειδικότητα</th>
            <th scope="col">Ημ/νία</th>
            <th scope="col">Ώρα Ραντεβού</th>
            <th scope="col">Κατάσταση</th>
        </tr>
    </thead>
    @foreach(var appointment in Model.Items)
    {
        <tr>
            <td>
                @appointment.availableDate.doctor.first_name @appointment.availableDate.doctor.last_name
            </td>
            <td>
                @appointment.availableDate.doctor.getSpecialtyName()Σ
            </td>
            <td>
                @appointment.scheduled_date.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture)
            </td>
            <td>
                @appointment.scheduled_date.ToString(@"HH\:mm")
            </td>
            <td>
                @if(appointment.status == Appointment.CANCELLED)
                {
                    <span>Ακυρώθηκε</span>
                } else if (DateTime.Compare(appointment.scheduled_date, DateTime.Now) < 0)
                {
                    <span>Ολοκληρώθηκε</span>
                } else
                {
                        using (Html.BeginForm("CancelAppointment", "PatientMainPage")) {
                            <input type="hidden" name="appointment_id" value="@appointment.appointment_id"/>
                            <span> <button type="submit">Ακύρωση</button> (Αναμένεται) </span>
                        }
                }
            </td>
        </tr>
    }
</table>

